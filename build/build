#!/bin/bash

arch=386
for os in linux windows; do
    echo "Building Pegasus-$os-$arch..."
    GOOS=$os GOARCH=$arch go build -trimpath -ldflags '-w -s' -o Pegasus
    zip pegasus-$os-$arch.zip Pegasus
    rm -rf Pegasus
done

arch=amd64
for os in linux windows darwin; do
    echo "Building Pegasus-$os-$arch..."
    GOOS=$os GOARCH=$arch go build -trimpath -ldflags '-w -s' -o Pegasus
    zip pegasus-$os-$arch.zip Pegasus
    rm -rf Pegasus
done